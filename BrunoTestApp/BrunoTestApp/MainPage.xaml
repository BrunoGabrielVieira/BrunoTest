<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrunoTestApp.MainPage">
    <StackLayout>
        
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bruno Test App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Button x:Name = "ButtonProducts"
                Text = "Products"
                FontSize="18"
                BackgroundColor = "#2196F3"
                TextColor = "White"
                HeightRequest = "75" />
        
        <Button x:Name = "ButtonSupport"
                Text = "Support"
                FontSize="18"
                BackgroundColor = "#2196F3"
                TextColor = "White"
                HeightRequest = "75" />
        
    </StackLayout>
</ContentPage>
